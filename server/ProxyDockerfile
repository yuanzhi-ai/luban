FROM registry.cn-hangzhou.aliyuncs.com/shining_star/golang_base:latest as builder

RUN mkdir /app

ADD . /app/

WORKDIR /app/services/proxy_svr

RUN go get

WORKDIR /app

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o http_proxy ./services/proxy_svr

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/http_proxy .

EXPOSE 8080

CMD ["/app/http_proxy"]
